                                <div class="card-body">
                                    <form action="/products/create" enctype="multipart/form-data" method="post">
                                        <label for="product_name">Product name: </label>
                                        <input type="string" id="product_name" name="name">
                                        <br>
                                        <label for="product_img">Image </label>
                                        <input type="file" id="image" name="image">
                                        <br>
                                        <label for="product_quantity">Quantity </label>
                                        <input type="number" name="quantity">
                                        <br>
                                        <label for="product_price">Price </label>
                                        <input type="number" name="price">
                                        <br>
                                        <label for="product_public">Set public? </label>
                                        <input type="checkbox" name="public" value="yes">
                                        <br>
                                        <button>Submit</button>
                                    </form>

                                </div>
                            </article>
                        </div>
                    </div>
                </div>

                </div>
            </section>

