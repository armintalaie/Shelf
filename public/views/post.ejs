        <section class="mt-4 mb-5">
            <div class="container mb-5">

                <h1 class="title  font-weight-bolder text-indigo">
                    Add A Product
                </h1>
            </div>
        </section>

        <main role="main">


            <section class="bg-gray200 pt-10 pb-10 mb-10">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-auto">
                            <article class="card">
                                <div class="card-body">
                                    <form action="/products/create" enctype="multipart/form-data" method="post">
                                        <table class=" display-6 table ">
                                            <tr>
                                                <th class="thead-dark "><label for="product_name">Product name: </label></th>
                                                <td> <input type="string" id="product_name" name="name"></td>
                                            </tr>
                                            <tr>
                                                <th class="thead-dark "> <label for="product_img">Image </label></th>
                                                <td> <input type="file" id="image" name="image"> </td>
                                            </tr>
                                            <tr>
                                                <th class="thead-dark ">Quantity</th>
                                                <td><input type="number" id="product_name" name="quantity"></td>
                                            </tr>
                                            <tr>
                                                <th><label for="product_price">Price </label> </th>
                                                <td> <input type="number" name="price"></td>
                                            </tr>
                                            <tr>
                                                <th><label for="product_public">Set public? </label></th>
                                                <td> <input type="checkbox" name="public" value="yes"></td>
                                            </tr>
                                        </table>
                                        <button type="submit" class="btn btn-md btn-indigo flex-wrap ">Add Product</button>
                                    </form>

                                </div>
                            </article>
                        </div>
                    </div>
                </div>

                </div>
            </section>

        </main>

